extends base
include _reviewCard

block append head
  script(src="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.umd.min.js")
  link(href="https://cdn.maptiler.com/maptiler-sdk-js/v2.0.3/maptiler-sdk.css" rel="stylesheet")


mixin overviewBox(label, text, icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text

block content
  section.section-header
    .header__hero
      .header__hero-overlay &nbsp;
      img.header__hero-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

    .heading-box
      h1.heading-primary
        span= `${tour.name} tour`
      .heading-box__group
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-clock')
          span.heading-box__text= `${tour.duration} days`
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-map-pin')
          span.heading-box__text= tour.startLocation.description

  section.section-description
    .overview-box
      div
        .overview-box__group
          h2.heading-secondary.ma-bt-lg Quick facts

          - const date = tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
          +overviewBox('Next date', date, 'calendar')
          +overviewBox('Difficulty', tour.difficulty, 'trending-up')
          +overviewBox('Participants', `${tour.maxGroupSize} people`, 'user')
          +overviewBox('Rating', `${tour.ratingsAverage} / 5` , 'star')

        .overview-box__group
          h2.heading-secondary.ma-bt-lg Your tour guides

          each guide in tour.guides
            .overview-box__detail
              img.overview-box__img(src=`/img/users/${guide.photo}`, alt=`${guide.name}`)

              - if(guide.role === 'guide')
                span.overview-box__label Tour Guide
              span.overview-box__text= guide.name

    .description-box
      h2.heading-secondary.ma-bt-lg= `About ${tour.name} tour`

      -const paragraphs = tour.description.split('\n');
      each para in paragraphs
        p.description__text= para

  section.section-itinerary
    .itinerary-container
      .itinerary-card
        .itinerary-header
          span.day Day 01
          h2 Pokhara to Tatopani Hot Spring
        .itinerary-details
          .itinerary-info
            span 🚗 Car: 5-6 Hrs
            span 📍 Overnight: Tatopani
            span 🍽️ Food: No
            span 🏨 Accommodation: Guesthouse/Hotel
          p
            strong Journey:
            |  Drive from Pokhara to Tatopani enjoying the riverside and mountain views.
          p
            strong Leisure Time:
            |  Enjoy a relaxing bath at Tatopani Hot Spring.
          p
            strong Overnight Stay:
            |  Hotel in Tatopani.

      .itinerary-card
        .itinerary-header
          span.day Day 02
          h2 Tatopani to Marpha
        .itinerary-details
          .itinerary-info
            span 🚗 Car: 4-5 Hrs 
            span 📍 Overnight: Marpha
            span 🍽️ Food: No
            span 🏨 Accommodation: Guesthouse/Hotel
          p
            strong Journey:
            |  Drive from Tatopani to Marpha, the beautiful apple village.
          p
            strong Leisure Time:
            |  Explore Marpha village, apple orchards, and taste local apple products.
          p
            strong Overnight Stay:
            |  Hotel in Marpha.

      .itinerary-card
        .itinerary-header
          span.day Day 03
          h2 Marpha to Muktinath Temple
        .itinerary-details
          .itinerary-info
            span 🚗 Car: 4 Hrs 
            span 📍 Overnight: Muktinath
            span 🍽️ Food: No
            span 🏨 Accommodation: Guesthouse/Hotel
          p
            strong Journey:
            |  Drive to Muktinath, a sacred pilgrimage site.
          p
            strong Leisure Time:
            |  Visit Muktinath Temple and explore local surroundings.
          p
            strong Overnight Stay:
            |  Hotel near Muktinath.

      .itinerary-card
        .itinerary-header
          span.day Day 04
          h2 Muktinath to Jomsom
        .itinerary-details
          .itinerary-info
            span 🚗 Car: 2-3 Hrs
            span 📍 Overnight: Jomsom
            span 🍽️ Food: No
            span 🏨 Accommodation: Guesthouse/Hotel
          p
            strong Journey:
            |  Drive back to Jomsom, enjoying the scenic mountain drive.
          p
            strong Leisure Time:
            |  Explore Jomsom Bazaar and the banks of Kali Gandaki River.
          p
            strong Overnight Stay:
            |  Hotel in Jomsom.

  section.section-pictures

    each image, i in tour.images
      .picture-box
        img.picture-box__img(src=`/img/tours/${image}`, alt=`${i + 1}`, class=`picture-box__img--${i + 1}`)

  section.section-map
    #map(data-locations=`${JSON.stringify(tour.locations)}`)

  section.section-reviews
    .reviews
      //- each review in tour.reviews
      //-   +reviewCard(review)

      if user
        button.btn.btn--green#write-review-btn Write a Review

        form#review-form.review-form(style='display: none', action='reviews/submitReview', method='POST')
          input(type='hidden', name='tour', value=tour.id)
          input(type='hidden', name='user', value=user.id)
          input(type='hidden', name='rating', id='selected-rating')

          .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${user.photo}`, alt=user.name)
            h6.reviews__user= user.name

          p.reviews__text-label Your Review
          textarea.reviews__text(name='review', placeholder='Write your review here...', required)

          .reviews__rating
            label Select Rating:
            .star-rating#star-rating
              each star in [1, 2, 3, 4, 5]
                svg.reviews__star.inactive(data-value=star)
                  use(xlink:href='/img/icons.svg#icon-star', style='pointer-events: none')


          button.btn.btn--green.mt-2(type='submit') Submit Review


      else
        a.btn.btn--green(href='/login') Log in to write a review!

      each review in tour.reviews
        +reviewCard(review)



  section.section-cta
    .cta
      .cta__img.cta__img--logo
        img(src='/img/logo.png', alt='TravelEase logo')
      img.cta__img.cta__img--1(src=`/img/tours/${tour.images[1]}`, alt='Tour Picture')
      img.cta__img.cta__img--2(src=`/img/tours/${tour.images[2]}`, alt='Tour Picture')
      .cta__content
        h2.heading-secondary What are you waiting for?
        p.cta__text=`${tour.duration} days. 1 adventure. Infinite memories. Make it yours today!`
        if user
          button.btn.btn--green.span-all-rows#book-tour(data-tour-id=`${tour.id}`) Book tour now!
        else
          a.btn.btn--green.span-all-rows(href='/login') Log In to book Tour!

  style.
    .reviews__star {
      cursor: pointer;
      fill: #ccc;
    }

    .reviews__star.active {
      fill: #ffb400;
    }

    .reviews__star.inactive {
      fill: #ccc;
    }

    .reviews__star use {
      pointer-events: none;
    }



  script.
      document.addEventListener('DOMContentLoaded', () => {
      const writeReviewBtn = document.getElementById('write-review-btn');
      const reviewForm = document.getElementById('review-form');
      const ratingInput = document.getElementById('selected-rating');
      const starContainer = document.getElementById('star-rating');

      if (writeReviewBtn) {
        writeReviewBtn.addEventListener('click', async () => {
          const tourId = document.querySelector('input[name="tour"]').value;

          try {
            const res = await fetch(`/api/v1/bookings/check-booking/${tourId}`);
            const data = await res.json();

            if (data.status === 'success') {
              // User has booked, show form
              reviewForm.style.display = 'block';
            } else {
              // User has not booked
              alert('You must purchase this tour before writing a review.');
            }
          } catch (err) {
            console.error('Error checking booking:', err);
            alert('Could not verify booking. Please try again.');
          }
        });
      }


      if (starContainer) {
        starContainer.addEventListener('click', (e) => {
          // Get the closest .reviews__star element
          const star = e.target.closest('.reviews__star');
          if (!star) return;  // Click was not on a star

          const selectedRating = parseInt(star.getAttribute('data-value'), 10);
          ratingInput.value = selectedRating;

          document.querySelectorAll('#star-rating .reviews__star').forEach(s => {
            const starValue = parseInt(s.getAttribute('data-value'), 10);
            if (starValue <= selectedRating) {
              s.classList.add('active');
              s.classList.remove('inactive');
            } else {
              s.classList.remove('active');
              s.classList.add('inactive');
            }
          });
        });
      }

      if (reviewForm) {
        reviewForm.addEventListener('submit', async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = Object.fromEntries(formData.entries());

          try {
            const res = await fetch('/api/v1/reviews/submitReview', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            if (res.ok) {
              const tourId = data.tour;
              window.location.href = `/tour/${tourId}`;
            } else {
              const errorData = await res.json();
              alert(errorData.message || 'Error submitting review');
            }
          } catch (err) {
            console.error(err);
            alert('Successful!!!');
          }
        });
      }
    });






